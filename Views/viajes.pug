extends ./layout/index

block contenido 
    h1(class="mt-5 text-center") #{pagina} 
    main.container.mt-5
        .row.proximos-viajes 
            each viaje in viajes 
                .col-md-6.col-lg-4.mb-4
                    .card
                        img(src=`img/destinos_${viaje.imagen}.jpg`, alt=`${viaje.imagen}`)
                        .card-body 
                            h2= viaje.titulo
                            p 
                                svg.icon.icon-tabler.icon-tabler-calendar-minus(xmlns='http://www.w3.org/2000/svg' width='44' height='44' viewbox='0 0 24 24' stroke-width='1.5' stroke='#00abfb' fill='none' stroke-linecap='round' stroke-linejoin='round')
                                    path(stroke='none' d='M0 0h24v24H0z' fill='none')
                                    rect(x='4' y='5' width='16' height='16' rx='2')
                                    line(x1='16' y1='3' x2='16' y2='7')
                                    line(x1='8' y1='3' x2='8' y2='7')
                                    line(x1='4' y1='11' x2='20' y2='11')
                                    line(x1='10' y1='16' x2='14' y2='16')

                                | #{viaje.fecha_ida}  /  #{viaje.fecha_vuelta} 
                            
                            p   
                                svg.icon.icon-tabler.icon-tabler-plane-inflight(xmlns='http://www.w3.org/2000/svg' width='44' height='44' viewbox='0 0 24 24' stroke-width='1.5' stroke='#00abfb' fill='none' stroke-linecap='round' stroke-linejoin='round')
                                    path(stroke='none' d='M0 0h24v24H0z' fill='none')
                                    path(d='M15 11.085h5a2 2 0 1 1 0 4h-15l-3 -6h3l2 2h3l-2 -7h3l4 7z')
                                    path(d='M3 21h18')

                                |    #{viaje.disponibles} Pasajes disponibles
                            
                            p= viaje.descripcion.substring(0,120)+'...'

                                    a(href=`viajes/${viaje.slug}`, class="btn btn-success btn-block") Más información 